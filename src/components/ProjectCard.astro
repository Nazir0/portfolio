---
const { title, description, link, detail } = Astro.props;
---

<article class="project-card" onclick="toggleExpand()">
    <h3>{title}</h3>
    <hr />
    <div>
        <a href={link} target="_blank">
            <p>{description}</p>
        </a>
    </div>
    <div class="details">
        <p>{detail}</p>
    </div>
</article>

<script>
    // Ajouter un script pour gérer les états d'expansion
    document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll(".project-card");

        cards.forEach(card => {
            card.addEventListener("click", () => {
                card.classList.toggle("expanded");
            });
        });
    });
</script>

<style>
    .project-card {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        width: 260px;
        height: 210px;
        padding: 20px;
        background-color: #1e1e1e;
        background: linear-gradient(160deg, rgb(59, 59, 59) 10%, rgba(30,30,30,1) 100%);
        border-radius: 20px;
        color: #fff;
        box-shadow: 0 5px 10px rgb(0, 0, 0, .5);
        cursor: pointer;
        transition: all 0.3s ease-in-out; /* Smooth transition */
        overflow: hidden; /* Hide the details initially */
    }

    .project-card.expanded {
        height: 300px; /* Increase the height when expanded */
        background-color: #2a2a2a; /* Slightly darker background */
    }

    .project-card > h3 {
        text-transform: uppercase;
        font-weight: 600;
        font-size: 25px;
        margin: 0 0 10px 0;
        width: 100%;
    }

    .project-card > hr {
        border: none;
        border-top: 1px solid #fff;
        width: 100%;
        margin: 0 0 10px 0;
    }

    .project-card > div > a {
        text-decoration: none;
        color: #d1d1d1;
        font-weight: 300;
        font-size: 14px;
        transition: all .3s;
    }

    .project-card > div > a:hover {
        color: orange;
    }

    .project-card > div {
        width: 100%;
    }

    .details {
        display: none; /* Hidden by default */
        font-size: 14px;
        color: #d1d1d1;
        margin-top: 10px;
    }

    .project-card.expanded .details {
        display: block; /* Show details when expanded */
    }
</style>
