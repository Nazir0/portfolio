---
import Layout from '../layouts/Layout.astro';
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillCard from "../components/SkillCard.astro";
import Title from "../components/Title.astro";
---

<Layout title="Mouhamed Nazir Mbow | Portfolio">
	<header><Navbar /></header>
		<main>
			<section class="about">
				<img src='dragon.png' alt='profile picture'/>
				<article>
					<p>Hi! I'm Mouhamed Nazir Mbow</p>
					<Title text='Software Engineer | DevOps Enthusiast'/>
				</article>
				<Button message='Latest Posts' icon='/external-link.svg' link='#'/>
			</section>
			<section class="skills">
				<Title text='Skills & Technologies'/>
				<section>
					<SkillCard 
						title='Programming Languages'
						description='Proficient in Python, Java, C, JavaScript (React, Vue, Ember), and SQL.'
						icon='/code.svg'
					/>
					<SkillCard 
						title='DevOps'
						description='Experience with Docker, GitLab CI, Ansible, Terraform, Kubernetes, and Grafana.'
						icon='/server.svg'
					/>
					<SkillCard 
						title='Full-Stack Development'
						description='Built scalable web apps with Django, SpringBoot, React, and Vue.'
						icon='/design.svg'
					/>
					<SkillCard 
						title='Networking & Infrastructure'
						description='Knowledge in Distributed Systems, Infrastructure Management, and Security.'
						icon='/network.svg'
					/>
				</section>
			</section>
			<section class="work">
				<Title text='My Work'/>
				<section>
					<ProjectCard 
						title='Event Planning App'
						description='A full-stack app for creating and managing event invitations using Django and VueJS.'
						link='#'
					/>
					<ProjectCard 
						title='Low Latency File Transfer System'
						description='Engineered a high-speed UDP-based file transfer program achieving 70 Mbps.'
						link='#'
					/>
					<ProjectCard 
						title='Blogger Website'
						description='Collaborated on a React-based website for a musician blogger.'
						link='#'
					/>
				</section>
			</section>
			<section class="contact">
				<Title text='Tell me about your next project'/>
				<Button message='Send Message' icon='/email.svg' link='mailto:mbownazir@gmail.com'/>
			</section>
		</main>
		<Footer />
</Layout>

<style>
	main {
		margin: 50px auto 0 auto;
		max-width: 1020px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 100px;
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 40px;
		width: 100%;
		height: calc(100vh - 50px);
		text-align: center;
		border-bottom: 1px solid rgb(30, 30, 30, 0.3);
		padding: 0 20px;
	}

	.about > img {
		width: 150px;
		border-radius: 9999px;
		object-fit: cover;
	}

	.about > article {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.about > article > p {
		color: #1e1e1e;
		font-style: italic;
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgba(30, 30, 30, 0.3);
		padding: 0px 20px 100px 20px;
	}

	.skills > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.work {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, 0.3);
		padding: 0px 20px 100px 20px;
	}
	
	.work > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.contact {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 50px;
		width: 100%;
		padding: 0px 20px 100px 20px;
	}

	@media screen and (max-width: 700px) {
		main {
			margin: 0 auto;
		}

		.about {
			height: 80vh;
		}

		.about > img {
			width: 100px;
		}
	}
</style>
